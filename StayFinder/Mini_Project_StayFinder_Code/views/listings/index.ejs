<% layout("/layouts/boilerplate") %>
<%= layout("/layouts/boilerplate") %>
    <h3>All Listings</h3>
    <div class="row row-cols-lg-4 row-col-md-2 row-cols-sm-1 ">
        <% for( listings of allListings){ %>
            <a href="/listings/<%= listings._id %>" class="listing-link">
                <div class="card  col  listing-card" style="width: 20rem;">
                    <img src="<%= listings.image.url %>" class="card-img-top" alt="listing_image"  style="height:20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listings.title %>
                            </b> <br>
                            &#8377; <%= listings.price.toLocaleString("en-IN") %> / night
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>